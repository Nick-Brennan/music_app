  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <div class="form-group">
  <%= form_tag(playlists_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], placeholder: "Search Playlists", class: "form-control" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <%= submit_tag "Search", class: "btn btn-default" %>
    </div>
  <% end %>
  </div>


<h1> Search Results </h1>
<% @playlists.each do |playlist| %>
  <div class="playlist">
    <h1><%= playlist.mood%></h1>
    <p>Playlist ID: <%= playlist.id %></p>
     <p><%= playlist.title %></p>
    <p><%= playlist.names %></p>
    <p><%= playlist.tracks %></p>
  </div>
<% end %>
